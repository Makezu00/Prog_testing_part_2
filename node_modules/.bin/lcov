#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*) basedir=`cygpath -w "$basedir"`;;
esac

if [ -x "$basedir/perl" ]; then
  "$basedir/perl"  "$basedir/../lcov/lcov" "$@"
  ret=$?
else 
  perl  "$basedir/../lcov/lcov" "$@"
  ret=$?
fi
exit $ret
